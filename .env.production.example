# Production Environment Configuration

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=5000
API_URL=https://api.realstack.xyz
FRONTEND_URL=https://realstack.xyz
CORS_ORIGIN=https://realstack.xyz

# Database Configuration
MONGODB_URI=mongodb://mongo:27017/realstack
MONGO_USERNAME=admin
MONGO_PASSWORD=secure_password_here

# JWT Authentication
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your_secure_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# Solana Configuration
SOLANA_NETWORK=mainnet
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WALLET_PRIVATE_KEY=your_solana_wallet_private_key_here

# Contract Configuration
PROGRAM_ID=your_solana_program_id_here
REAL_TOKEN_MINT=your_real_token_mint_address_here

# Email Service
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=no-reply@realstack.xyz

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Feature Flags
FEATURE_GOVERNANCE=true
FEATURE_INCOME_DISTRIBUTION=true
FEATURE_ASSET_MARKETPLACE=true 