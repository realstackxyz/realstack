# RealStack Environment Configuration

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DB_URI=mongodb://localhost:27017/realstack
DB_USER=
DB_PASSWORD=

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WALLET_PRIVATE_KEY=your_solana_wallet_private_key_here

# Contract Configuration
PROGRAM_ID=your_solana_program_id_here
REAL_TOKEN_MINT=your_real_token_mint_address_here

# Asset Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads
# For AWS S3
AWS_BUCKET_NAME=
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Email Service
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=info@realstack.xyz

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Verification Service
VERIFICATION_WEBHOOK_URL=
VERIFICATION_API_KEY=

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_PROVIDER=posthog
ANALYTICS_API_KEY=

# Feature Flags
FEATURE_GOVERNANCE=true
FEATURE_INCOME_DISTRIBUTION=true
FEATURE_ASSET_MARKETPLACE=true

# Third-party Integration
PUMP_FUN_API_URL=
PUMP_FUN_API_KEY=

# Only set these in development environment
DEBUG=true
MOCK_BLOCKCHAIN=false 